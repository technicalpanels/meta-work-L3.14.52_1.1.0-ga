+                                vactive = <768>;
+                                hback-porch = <48>;
+                                hfront-porch = <240>;
+                                vback-porch = <23>;
+                                vfront-porch = <3>;
+                                hsync-len = <32>;
+                                vsync-len = <12>;
+                        };
+		};	
+	};
+
+	lvds-channel@1 {
+                status = "disabled";
+	};
+};
+
+&pwm4 {
+        pinctrl-names = "default";
+        pinctrl-0 = <&pinctrl_pwm4>;
+        status = "okay";
